<% include partials/_header.ejs %>

<div class="container">

  <h2>
    <%= title %>
  </h2>

  <form action="/bankingtest" method="post">

    <div class="form-group">
      <label for="customer">Last Name</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="customer" placeholder="Last Name" required autofocus="required" />
      </div>
    </div>

    <div class="form-group">
      <label for="account">Account</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="account" placeholder="Choose Account" required />
      </div>
    </div>

    <div class="form-group">
      <label for="action">Action</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="action" placeholder="Action" required />
      </div>
    </div>

    <div class="form-group">
      <label for="amount">Amount</label>
      <div class="col-sm-6">
        <input type="number" class="form-control" name="amount" placeholder="Amount" required />
      </div>
    </div>

    <button type="submit" value="bankingtest" class="btn btn-primary">Complete Transaction</button>

  </form>
</div>

